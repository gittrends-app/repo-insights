{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "lib": ["es2022", "dom"],
    "baseUrl": "./",
    "rootDirs": ["src", ".next", "libs/core"],
    "paths": {
      "@/*": ["src/*"],
      "@/core": ["libs/core/src"]
    },
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [{ "name": "next" }]
  },
  "references": [{ "path": "./libs/core" }],
  "include": ["src/**/*", "libs/core/src/**/*", ".next/types/**/*.ts", "hero.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
